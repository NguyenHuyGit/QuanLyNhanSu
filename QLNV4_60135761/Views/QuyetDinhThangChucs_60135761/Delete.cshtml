@model QLNV4_60135761.Models.QuyetDinhThangChuc

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    if (Session["QuanLy"] == null)
    {
        Response.Redirect("/TaiKhoans_60135761/DangNhap", false);
    }
}


<h3 style="color:red;">Bạn có chắc chắn muốn xoá quyết định này?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Số quyết định
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoQD)
        </dd>
        <dt>
            Nội dung
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoiDungQuyetDinh)
        </dd>

        <dt>
            Ngày tạo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayTao)
        </dd>

        <dt>
           Nhân viên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NhanVien.HoTenNV)
        </dd>

    </dl>

    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn btn-danger" style="width: 100px;" />
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-info", @style = "width: 100px;" })
        </div>
    }
</div>
