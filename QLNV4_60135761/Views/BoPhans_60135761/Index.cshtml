@model IEnumerable<QLNV4_60135761.Models.BoPhan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    int i = 0;
    if (Session["QuanLy"] == null)
    {
        Response.Redirect("/TaiKhoans_60135761/DangNhap", false);
    }
}

<h2>DANH SÁCH BỘ PHẬN</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary", @style = "width: 120px;" })
</p>
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            STT
        </th>
        <th>Mã bộ phận</th>
        <th>
            Tên bộ phận
        </th>
        <th>Chức năng</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @{ i++;}
        @i
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MaBP)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenBoPhan)
    </td>
    <td>
        @Html.ActionLink("Cập nhật", "Edit", new { id = item.MaBP }, new { @class = "btn btn-success", @style = "width: 100px;" })
        @*@Html.ActionLink("Details", "Details", new { id=item.MaBP }) |*@
        @Html.ActionLink("Xoá", "Delete", new { id = item.MaBP }, new { @class = "btn btn-danger", @style = "width: 100px;" })
    </td>
</tr>
}

</table>
