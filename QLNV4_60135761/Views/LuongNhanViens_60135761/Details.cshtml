@model QLNV4_60135761.Models.LuongNhanVien

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    if (Session["DangNhap"] == null)
    {
        Response.Redirect("/TaiKhoans_60135761/DangNhap", false);
    }
}

<h2>THÔNG TIN CHI TIẾT LƯƠNG NHÂN VIÊN</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã lương
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaLuong)
        </dd>

        <dt>
            Ngày cập nhật
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayCapNhat)
        </dd>

        <dt>
            Lương hiện tại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LuongHienTai)
        </dd>

        <dt>
            Đơn vị tiền
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DonViTien)
        </dd>

        <dt>
           Nhân viên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NhanVien.HoTenNV)
        </dd>

    </dl>
</div>
<hr />
<p class="col-md-offset-1">
    @if (Session["QuanLy"] != null)
    {
        @Html.ActionLink("Cập nhật", "Edit", new { id = Model.MaLuong }, new { @class = "btn btn-success", @style = "width: 100px;" })
    }
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-info", @style = "width: 100px;" })
