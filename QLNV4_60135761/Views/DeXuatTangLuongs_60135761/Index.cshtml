@model IEnumerable<QLNV4_60135761.Models.DeXuatTangLuong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    int i = 0;
    if (Session["DangNhap"] == null)
    {
        Response.Redirect("/TaiKhoans_60135761/DangNhap", false);
    }
}

<h2>DANH SÁCH ĐỀ XUẤT</h2>

@if (Session["MaNhanVien"] != null)
{
    <p>
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary", @style = "width: 120px;" })
    </p>
}

<table class="table table-hover table-bordered table-striped">
    <tr>
        <th>
            STT
        </th>
        <th>
            Mã đề xuất
        </th>
        <th>
            Ngày đề xuất
        </th>        
        <th>
            Lương mong muốn
        </th>
        <th>
            Trạng thái
        </th>
        <th>
            Nhân viên
        </th>
        <th>Chức năng</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @{ i++;}
        @i
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MaDeXuat)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NgayDeXuat)
    </td>   
    <td>
        @Html.DisplayFor(modelItem => item.LuongMongMuon)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TrangThai)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NhanVien.HoTenNV)
    </td>
    <td>       
        @if (Session["QuanLy"] != null)
        {
            @Html.ActionLink("Cập nhật", "Edit", new { id = item.MaDeXuat }, new { @class = "btn btn-success", @style = "width: 100px;" })
            @Html.ActionLink("Xoá", "Delete", new { id = item.MaDeXuat }, new { @class = "btn btn-danger", @style = "width: 100px;" })
        }
        @Html.ActionLink("Xem chi tiết", "Details", new { id = item.MaDeXuat }, new { @class = "btn btn-info", @style = "width: 100px;" })
    </td>
</tr>
    }

</table>
