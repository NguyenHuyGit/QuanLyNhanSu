@model QLNV4_60135761.Models.LoaiNhanVien

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    if (Session["QuanLy"] == null)
    {
        Response.Redirect("/TaiKhoans_60135761/DangNhap", false);
    }
}


<h3 style="color:red;">Bạn có chắc chắn muốn xoá thông tin này?</h3>
<div>
    <h4>LoaiNhanVien</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã loại nhân viên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaLoaiNV)
        </dd>
        <dt>
            Tên loại nhân viên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenLoaiNhanVien)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn btn-danger" style="width:100px;" />
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-info", @style = "width: 100px;" })
        </div>
    }
</div>
