@model QLNV4_60135761.Models.NhanVien

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    string gtinh = "";
    if (Session["DangNhap"] == null)
    {
        Response.Redirect("/TaiKhoans_60135761/DangNhap", false);
    }
}

<h2 class="text-center">THÔNG TIN CHI TIẾT NHÂN VIÊN</h2>

<hr />
<div>
    <div class="row">
        <div class="col-md-4">
            <img src="/Public/Images/@Html.DisplayFor(model => model.AnhNV)" style="width:80%; height: 80%; " />
        </div>
        <div class="col-md-8">
            <dl class="dl-horizontal">

                <dt>
                    Mã nhân viên
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MaNV)
                </dd>

                <dt>
                    Họ tên
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.HoTenNV)
                </dd>

                <dt>
                    Ngày sinh
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NgaySinh)
                </dd>

                <dt>
                    Giới tính
                </dt>

                <dd>
                    @if (Model.GioiTinh == true)
                    {
                        gtinh = "Nam";
                    }
                    else
                    {
                        gtinh = "Nữ";
                    }
                    @gtinh
                </dd>

                <dt>
                    Địa chỉ
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DiaChi)
                </dd>

                <dt>
                    SĐT
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SDT)
                </dd>

                <dt>
                    CMND
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CMND)
                </dd>

                <dt>
                    Trạng thái
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TrangThai)
                </dd>

                <dt>
                    Người quản lý
                </dt>

                <dd>
                    @*@Html.DisplayFor(model => model.MaNVQL)*@
                    @Html.Action("TenNguoiQuanLy", "NhanViens_60135761", new { manvql = Model.MaNVQL })
                </dd>

                <dt>
                    Chức vụ

                <dd>
                    @Html.DisplayFor(model => model.ChucVu.TenChucVu)
                </dd>

                <dt>
                    Loại nhân viên
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LoaiNhanVien.TenLoaiNhanVien)
                </dd>

                <dt>
                    Quốc tịch
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.QuocTich.TenQuocTich)
                </dd>

                <dt>
                    Trình độ
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TrinhDoDaoTao.TenTrinhDo)
                </dd>

                <dt>
                    Vì trí công việc
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ViTriCongViec.TenViTriCongViec)
                </dd>

                <dt>
                    Bộ phận
                </dt>

                <dd>
                    @Html.Action("LayTenBoPhan", "BoPhans_60135761", new {mavt = Model.MaVT})
                </dd>
            </dl>
        </div>
    </div>
 

</div>
<hr />
<p class="text-center">
    @if (Session["QuanLy"] != null)
    {
        @Html.ActionLink("Cập nhật", "Edit", new { id = Model.MaNV }, new { @class = "btn btn-success", @style = "width: 100px;" })
    }
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-info", @style = "width: 100px;" })
</p>