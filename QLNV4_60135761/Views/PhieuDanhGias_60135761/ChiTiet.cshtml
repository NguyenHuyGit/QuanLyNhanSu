@model QLNV4_60135761.Models.PhieuDanhGia
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    string nxet = "";
    if (Session["DangNhap"] == null)
    {
        Response.Redirect("/TaiKhoans_60135761/DangNhap", false);
    }
}
<head>
    <style>
        td, th {
            text-align: center;
        }

        .padding {
            padding: 10px;
        }

        .bg-green {
            background-color: #009900;
        }

        .t-white {
            color: #fff;
        }

        .list-item {
            list-style: none;
        }

            .list-item li {
                font-style: italic;
            }
    </style>
</head>

<div class="col-md-12 text-center bg-green t-white padding">
    <b>THÔNG TIN CHI TIẾT PHIẾU ĐÁNH GIÁ NHÂN SỰ @Model.MaPhieu</b>
</div>
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-6">
                        <b>Họ tên nhân viên:</b> <i>@Model.NhanVien.HoTenNV </i><br />
                        <b>Kỳ đánh giá:</b> <i>@Model.KyDanhGia </i><br />
                        <b>Vị trí:</b> <i>@Html.Action("TenViTri", "ViTriCongViecs_60135761", new { mavt = Model.NhanVien.MaVT }) </i><br />
                    </div>
                    <div class="col-md-6 text-right">
                        <b>Người quản lý:</b> <i>@Html.Action("TenNguoiQuanLy", "NhanViens_60135761", new { manvql = Model.NhanVien.MaNVQL }) </i><br />
                        <b>Năm:</b> <i>@Model.Nam </i><br />
                        <b>Bộ phận:</b> <i>@Html.Action("LayTenBoPhan", "BoPhans_60135761", new { mavt = Model.NhanVien.MaVT }) </i><br />
                    </div>
                </div>


            </div>
            <div class="col-md-3 text-right">

                <a href="@Url.Action("Index", "PhieuDanhGias_60135761")" class="btn btn-sm btn-warning"> Quay lại</a>
            </div>
        </div>
    </div>
    <div class="card-body">

        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr class="bg-green t-white">
                    <th>Mã tiêu chí</th>
                    <th>Loại đánh giá</th>
                    <th>Tên tiêu chí</th>
                    <th>Điểm</th>
                    <th>Nhận xét</th>
                </tr>
            </thead>
            <tbody>
                @{ int tongdiem = 0;}
                @foreach (var ct in ViewBag.ListChiTiet)
                {
                    <tr>
                        <td>@ct.MaTieuChi</td>
                        <td><b>@Html.Action("LoaiDanhGia", "PhieuDanhGias_60135761", new { matc = ct.MaTieuChi })</b></td>
                        <td>
                            <b>@Html.Action("TenTieuChi", "PhieuDanhGias_60135761", new { matc = ct.MaTieuChi })</b>
                            @if (ct.MaTieuChi == 1)
                            {
                                <p>
                                    Các kỹ năng về CNTT gồm: HTML, CSS, Javascript, SQL Server, <br />
                                    Word, Excel, Powerpoint…
                                </p>
                                <ul class="list-item">
                                    <li>
                                        Chưa nắm được: 1 điểm
                                    </li>
                                    <li>
                                        Nắm được khái niệm và hiểu được kỹ thuật ở mức đơn giản: 2  điểm
                                    </li>
                                    <li>
                                        Cần sự hỗ trợ khi thực hiện công việc: 3 điểm
                                    </li>
                                    <li>
                                        Có khả năng thực hiện độc lập, không cần hỗ trợ nhiều nhưng vẫn cần trợ giúp: 4 điểm
                                    </li>
                                    <li>
                                        Có thể thực hiện mà không cần hỗ trợ về kiến thức và huấn luyện về kỹ năng: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (ct.MaTieuChi == 2)
                            {
                                <ul class="list-item">
                                    <li>
                                        Dưới 1 năm: 1 điểm
                                    </li>
                                    <li>
                                        2 năm trở lên: 2  điểm
                                    </li>
                                    <li>
                                        4 năm trở lên: 3 điểm
                                    </li>
                                    <li>
                                        5 năm: 4 điểm
                                    </li>
                                    <li>
                                        5 năm trở lên: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (ct.MaTieuChi == 3)
                            {
                                <ul class="list-item">
                                    <li>
                                        1 dự án: 1 điểm
                                    </li>
                                    <li>
                                        2 dự án: 2  điểm
                                    </li>
                                    <li>
                                        3 dự án trở lên: 3 điểm
                                    </li>
                                    <li>
                                        5 năm dự án trở lên: 4 điểm
                                    </li>
                                    <li>
                                        7 dự án trở lên: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (ct.MaTieuChi == 4)
                            {
                                <ul class="list-item">
                                    <li>
                                        20% nội dung: 1 điểm
                                    </li>
                                    <li>
                                        Trên 30% nội dung: 2  điểm
                                    </li>
                                    <li>
                                        Trên 50% nội dung: 3 điểm
                                    </li>
                                    <li>
                                        Trên 70% nội dung: 4 điểm
                                    </li>
                                    <li>
                                        Toàn bộ nội dung: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (ct.MaTieuChi == 5)
                            {
                                <ul class="list-item">
                                    <li>
                                        Mới tiếp cận: 1 điểm
                                    </li>
                                    <li>
                                        Có khả năng viết mã cho các chương trình đơn giản: 2  điểm
                                    </li>
                                    <li>
                                        Có khả năng viết mã cho các chương trình phức tạp, <br />
                                        test chương trình sử dụng được công cụ đã thống nhất: 3 điểm
                                    </li>
                                    <li>
                                        Có khả năng viết mã cho các chương trình phức tạp, test chương trình,
                                        sử dụng được công cụ đã thống nhất và đánh giá được kết quả thực hiện : 4 điểm
                                    </li>
                                    <li>
                                        Có khả năng tư vấn, quản lý, thiết lập tiêu chuẩn kỹ thuật,
                                        lựa chọn phương pháp phát triển cho team: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (ct.MaTieuChi == 6)
                            {
                                <ul class="list-item">
                                    <li>
                                        Lỗi cú pháp: 1 điểm
                                    </li>
                                    <li>
                                        Lỗi giao diện: 2  điểm
                                    </li>
                                    <li>
                                        Lỗi chức năng: 3 điểm
                                    </li>
                                    <li>
                                        Lỗi hoạt động: 4 điểm
                                    </li>
                                    <li>
                                        Tất cả các lỗi: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (ct.MaTieuChi == 7)
                            {
                                <ul class="list-item">
                                    <li>
                                        Đi trễ quá 2/3 thời gian làm: 1 điểm
                                    </li>
                                    <li>
                                        Nghỉ 2 ngày trở lên: 2  điểm
                                    </li>
                                    <li>
                                        Nghỉ 2 ngày: 3 điểm
                                    </li>
                                    <li>
                                        Nghỉ 1 ngày: 4 điểm
                                    </li>
                                    <li>
                                        Đi làm đầy đủ đúng giờ: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (ct.MaTieuChi == 8)
                            {
                                <ul class="list-item">
                                    <li>
                                        Thường xuyên bị phê bình: 1 điểm
                                    </li>
                                    <li>
                                        Bị kỷ luật cảnh cáo: 2  điểm
                                    </li>
                                    <li>
                                        Bị kỷ luật thiển trách: 3 điểm
                                    </li>
                                    <li>
                                        Thực hiện không tốt 1/3 các yêu cầu của công ty: 4 điểm
                                    </li>
                                    <li>
                                        Thực hiện đầy đủ các quy định, yêu cầu của công ty: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (ct.MaTieuChi == 9)
                            {
                                <ul class="list-item">
                                    <li>
                                        Không tham gia hoạt động công ty: 1 điểm
                                    </li>
                                    <li>
                                        Tham gia 1 hoạt động của công ty: 2 điểm
                                    </li>
                                    <li>
                                        Tham gia 1/3 hoạt động của công ty: 3 điểm
                                    </li>
                                    <li>
                                        Tham gia 2/3 hoạt động của công ty: 4 điểm
                                    </li>
                                    <li>
                                        Tham gia đầy đủ các hoạt động của công ty: 5 điểm
                                    </li>
                                </ul>
                            }
                        </td>
                        <td>
                            @ct.Diem
                        </td>
                        <td>
                            @if (ct.Diem == 1)
                            {
                                nxet = "Kém";
                            }
                            else if (ct.Diem == 2)
                            {
                                nxet = "Khá";
                            }
                            else if (ct.Diem == 3)
                            {
                                nxet = "Khá tốt";
                            }
                            else if (ct.Diem == 4)
                            {
                                nxet = "Tốt";
                            }
                            else if (ct.Diem == 5)
                            {
                                nxet = "Rất tốt";
                            }
                            else
                            {
                                nxet = "";
                            }
                            @nxet
                        </td>
                    </tr>
                    tongdiem += ct.Diem;
                }
            </tbody>
            <tfoot>
                <tr>

                    <th colspan="3" class="bg-green t-white">Tổng điểm</th>
                    <th class="bg-green t-white">@tongdiem</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
