@model IEnumerable<QLNV4_60135761.ViewModel.TieuChi>
@{
    ViewBag.Title = "DanhGia";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    if (Session["MaNhanVien"] == null)
    {
        Response.Redirect("/TaiKhoans_60135761/DangNhap", false);
    }
}

<head>
    <style>
        td, th {
            text-align: center;
        }

        .padding {
            padding: 10px;
        }

        .bg-green {
            background-color: #009900;
        }

        .t-white {
            color: #fff;
        }

        .back {
            position: absolute;
            right: 0;
            top: 0;
            display: inline-block;
        }

        .border {
            border: 1px solid gray;
            border-radius: 10px;
        }

        .list-item {
            list-style: none;
        }

            .list-item li {
                font-style: italic;
            }

        .note {
            position: fixed;
            top: 120px;
            right: 16px;
        }
    </style>
</head>

<div class="col-md-12 bg-green t-white text-center padding">
    <b> PHIẾU ĐÁNH GIÁ NHÂN SỰ</b>
    <a href="@Url.Action("Index")" class="btn btn-info back">Quay lại</a>

</div>

<div class="card border">
    @using (Html.BeginForm("LuuPhieu", "PhieuDanhGias_60135761", FormMethod.Post))
    {
        <div class="card-header padding">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                      
                        <label>Tên đánh giá</label>
                        <input name="tendanhgia" value="@ViewBag.tendanhgia" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Kỳ đánh giá</label>
                        <input name="kydanhgia" value="@ViewBag.kydanhgia" readonly class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Năm</label>
                        <input name="nam" value="@ViewBag.nam" readonly class="form-control" />
                    </div>
                    @*<div class="form-group">
                        <label>Người quản lý</label>
                        <input type="text" name="tennguoiquanly" class="form-control" required />
                    </div>*@
                </div>
            </div>
        </div>



        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-green t-white">
                    <th>Mã tiêu chí</th>
                    <th>Loại đánh giá</th>
                    <th>Tên tiêu chí</th>
                    <th>Điểm</th>
                </tr>
                <tr>
                </tr>
            </thead>
            <tbody>

                @foreach (var tc in Model)
                {
                    <tr>
                        <td>@tc.MaTieuChi</td>
                        <td><b>@Html.Action("LoaiDanhGia", "PhieuDanhGias_60135761", new { matc = tc.MaTieuChi })</b></td>
                        <td>
                            <b>@tc.TenTieuChi</b>
                            @if (tc.MaTieuChi == 1)
                            {
                                <p>
                                    Các kỹ năng về CNTT gồm: HTML, CSS, Javascript, SQL Server, <br />
                                    Word, Excel, Powerpoint…
                                </p>
                                <ul class="list-item">
                                    <li>
                                        Chưa nắm được: 1 điểm
                                    </li>
                                    <li>
                                        Nắm được khái niệm và hiểu được kỹ thuật ở mức đơn giản: 2  điểm
                                    </li>
                                    <li>
                                        Cần sự hỗ trợ khi thực hiện công việc: 3 điểm
                                    </li>
                                    <li>
                                        Có khả năng thực hiện độc lập, không cần hỗ trợ nhiều nhưng vẫn cần trợ giúp: 4 điểm
                                    </li>
                                    <li>
                                        Có thể thực hiện mà không cần hỗ trợ về kiến thức và huấn luyện về kỹ năng: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (tc.MaTieuChi == 2)
                            {
                                <ul class="list-item">
                                    <li>
                                        Dưới 1 năm: 1 điểm
                                    </li>
                                    <li>
                                        2 năm trở lên: 2  điểm
                                    </li>
                                    <li>
                                        4 năm trở lên: 3 điểm
                                    </li>
                                    <li>
                                        5 năm: 4 điểm
                                    </li>
                                    <li>
                                        5 năm trở lên: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (tc.MaTieuChi == 3)
                            {
                                <ul class="list-item">
                                    <li>
                                        1 dự án: 1 điểm
                                    </li>
                                    <li>
                                        2 dự án: 2  điểm
                                    </li>
                                    <li>
                                        3 dự án trở lên: 3 điểm
                                    </li>
                                    <li>
                                        5 năm dự án trở lên: 4 điểm
                                    </li>
                                    <li>
                                        7 dự án trở lên: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (tc.MaTieuChi == 4)
                            {
                                <ul class="list-item">
                                    <li>
                                        20% nội dung: 1 điểm
                                    </li>
                                    <li>
                                        Trên 30% nội dung: 2  điểm
                                    </li>
                                    <li>
                                        Trên 50% nội dung: 3 điểm
                                    </li>
                                    <li>
                                        Trên 70% nội dung: 4 điểm
                                    </li>
                                    <li>
                                        Toàn bộ nội dung: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (tc.MaTieuChi == 5)
                            {
                                <ul class="list-item">
                                    <li>
                                        Mới tiếp cận: 1 điểm
                                    </li>
                                    <li>
                                        Có khả năng viết mã cho các chương trình đơn giản: 2  điểm
                                    </li>
                                    <li>
                                        Có khả năng viết mã cho các chương trình phức tạp,
                                        test chương trình sử dụng được công cụ đã thống nhất: 3 điểm
                                    </li>
                                    <li>
                                        Có khả năng viết mã cho các chương trình phức tạp, test chương trình,
                                        sử dụng được công cụ đã thống nhất và đánh giá được kết quả thực hiện : 4 điểm
                                    </li>
                                    <li>
                                        Có khả năng tư vấn, quản lý, thiết lập tiêu chuẩn kỹ thuật,
                                        lựa chọn phương pháp phát triển cho team: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (tc.MaTieuChi == 6)
                            {
                                <ul class="list-item">
                                    <li>
                                        Lỗi cú pháp: 1 điểm
                                    </li>
                                    <li>
                                        Lỗi giao diện: 2  điểm
                                    </li>
                                    <li>
                                        Lỗi chức năng: 3 điểm
                                    </li>
                                    <li>
                                        Lỗi hoạt động: 4 điểm
                                    </li>
                                    <li>
                                        Tất cả các lỗi: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (tc.MaTieuChi == 7)
                            {
                                <ul class="list-item">
                                    <li>
                                        Đi trễ quá 2/3 thời gian làm: 1 điểm
                                    </li>
                                    <li>
                                        Nghỉ 2 ngày trở lên: 2  điểm
                                    </li>
                                    <li>
                                        Nghỉ 2 ngày: 3 điểm
                                    </li>
                                    <li>
                                        Nghỉ 1 ngày: 4 điểm
                                    </li>
                                    <li>
                                        Đi làm đầy đủ đúng giờ: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (tc.MaTieuChi == 8)
                            {
                                <ul class="list-item">
                                    <li>
                                        Thường xuyên bị phê bình: 1 điểm
                                    </li>
                                    <li>
                                        Bị kỷ luật cảnh cáo: 2  điểm
                                    </li>
                                    <li>
                                        Bị kỷ luật thiển trách: 3 điểm
                                    </li>
                                    <li>
                                        Thực hiện không tốt 1/3 các yêu cầu của công ty: 4 điểm
                                    </li>
                                    <li>
                                        Thực hiện đầy đủ các quy định, yêu cầu của công ty: 5 điểm
                                    </li>
                                </ul>
                            }
                            else if (tc.MaTieuChi == 9)
                            {
                                <ul class="list-item">
                                    <li>
                                        Không tham gia hoạt động công ty: 1 điểm
                                    </li>
                                    <li>
                                        Tham gia 1 hoạt động của công ty: 2 điểm
                                    </li>
                                    <li>
                                        Tham gia 1/3 hoạt động của công ty: 3 điểm
                                    </li>
                                    <li>
                                        Tham gia 2/3 hoạt động của công ty: 4 điểm
                                    </li>
                                    <li>
                                        Tham gia đầy đủ các hoạt động của công ty: 5 điểm
                                    </li>
                                </ul>
                            }
                        </td>
                        <td>
                            <input type="number" name="diem" value="@tc.Diem" min="0" max="5" class="form-control" />
                        </td>
                    </tr>

                }

            </tbody>
        </table>

        <div class="card-footer padding text-center bg-">
            <input type="submit" name="name" value="Gửi phiếu" class="btn btn-success" style="width:120px;" />
        </div>

    }
</div>

<div class="note">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td colspan="2"><b><i>Ghi chú</i></b></td>
            </tr>
            <tr>
                <th>Điểm</th>
                <th>Mô tả</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>Kém</td>
            </tr>
            <tr>
                <td>2</td>
                <td>Khá</td>
            </tr>
            <tr>
                <td>3</td>
                <td>Khá tốt</td>
            </tr>
            <tr>
                <td>4</td>
                <td>Tốt</td>
            </tr>
            <tr>
                <td>5</td>
                <td>Rất tốt</td>
            </tr>
        </tbody>
    </table>
</div>
